{
  "description": "Auto-validate basic plugin structure and format code after edits",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/sync.sh",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
